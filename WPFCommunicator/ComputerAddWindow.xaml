<Window x:Class="WPFCommunicator.ComputerAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFCommunicator"
        mc:Ignorable="d"
        Title="Dodaj komputer" Height="120" Width="180"
        x:Name="addComputer_ui">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5px" />
        </Style>
        <Style TargetType="Window">
            <Setter Property="Padding" Value="5px" />
        </Style>
    </Window.Resources>
    
    <StackPanel HorizontalAlignment="Center" x:Name="stackPanel_ui">
        <TextBlock TextAlignment="Center"> Dodaj komputer:</TextBlock>
        <TextBox x:Name="ip_ui" MinWidth="150px"></TextBox>
        <Button Margin="5px 0 5px 5px" Click="ButtonBase_OnClick"> Dodaj </Button>
    </StackPanel>
</Window>
